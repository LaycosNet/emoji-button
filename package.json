{
  "name": "@joeattardi/emoji-button",
  "version": "5.0.0",
  "source": [
    "src/index.js",
    "src/renderers/native.ts",
    "src/renderers/twemoji.ts",
    "src/styles/theme/auto.ts",
    "src/styles/theme/dark.ts",
    "src/styles/theme/light.ts"
  ],
  "description": "Vanilla JavaScript emoji picker",
  "keywords": [
    "emoji",
    "emoji picker",
    "javascript"
  ],
  "targets": {
    "default": {
      "isLibrary": true,
      "distDir": "./dist",
      "outputFormat": "esmodule",
      "includeNodeModules": false
    }
  },
  "scripts": {
    "clean": "rimraf dist release",
    "start": "concurrently -n \"type-check,serve\" -c \"blueBright,yellowBright\" \"npm:check:watch\" \"npm:serve\"",
    "serve": "parcel harness/index.html",
    "test": "jest src/**.test.js",
    "test:watch": "jest --watchAll src/**.test.js",
    "lint": "eslint src/*.js",
    "release": "npm run build && node bin/prepare-release.js",
    "prettify": "prettier src/*.js --write",
    "build:emoji": "node bin/buildEmojiData.js",
    "postinstall": "npm run build:emoji",
    "build": "npm run check && parcel build",
    "check": "tsc --noEmit",
    "check:watch": "tsc --noEmit --watch"
  },
  "author": "Joe Attardi <jattardi@gmail.com> (https://joeattardi.codes)",
  "repository": {
    "type": "git",
    "url": "https://github.com/joeattardi/emoji-button.git"
  },
  "homepage": "https://emoji-button.js.org",
  "bugs": "https://github.com/joeattardi/emoji-button/issues",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.14.2",
    "@babel/preset-env": "^7.14.1",
    "@types/escape-html": "^1.0.1",
    "@types/mustache": "^4.1.2",
    "@types/twemoji": "^12.1.2",
    "concurrently": "^6.4.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^6.15.0",
    "jest": "^26.6.3",
    "parcel": "^2.0.1",
    "prettier": "^2.3.0",
    "recursive-copy": "^2.0.13",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@emotion/css": "^11.5.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@popperjs/core": "^2.10.2",
    "escape-html": "^1.0.3",
    "focus-trap": "^6.7.1",
    "mustache": "^4.2.0",
    "nanoevents": "^6.0.2",
    "twemoji": "^13.1.0"
  }
}
